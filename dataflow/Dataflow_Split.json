{
	"name": "Dataflow_Split",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ParquetSink",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn"
				},
				{
					"name": "derivedColumn1"
				},
				{
					"name": "compose",
					"flowlet": {
						"referenceName": "FLW_GreenTaxi",
						"type": "DataFlowReference"
					}
				}
			],
			"scriptLines": [
				"compose(composition: 'FLW_GreenTaxi') ~> compose@(output)",
				"compose@output derive(fname = '/myfiles/test.csv') ~> derivedColumn",
				"derivedColumn derive(finalfname = split(fname, '/')) ~> derivedColumn1",
				"derivedColumn1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'parquet',",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}